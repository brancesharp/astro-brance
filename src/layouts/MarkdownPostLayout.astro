---
import { imageConfig } from "astro:assets";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { frontmatter } = Astro.props;
---
<!doctype html>
<html lang="en">
    <head>

        <meta charset="UTF-8" />
        <meta name="description" content="Brance Sharp portfolio" />
        <meta name="viewport" content="width-device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.indigo.min.css"/>
        <title>{frontmatter.title}</title>
    </head>
    <body>
        <Header />
        <main class="container">
            <section id="blog-navigation" style="padding: 0% 5% 0%">
                <a href="/blog"><small>Back to Blog Posts</small></a>
            </section>
            <section id="frontmatter" style="padding: 0% 5% 0%">
                <h1>{frontmatter.title}</h1>
                <p>{frontmatter.pubDate.toString().slice(0,10)}</p>
                <p><em>{frontmatter.description}</em></p>
            </section>
            <section id="content" style="padding: 0% 5% 0%">
                <slot />
            </section>
        </main>
        <Footer />
    </body>
</html>
